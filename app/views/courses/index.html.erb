


<% if @update == 0 %>
	
<div class="container">
	<div class="row row2">
		<div  class="col-md-2"></div>
		<div  class="col-md-10">
			<h2>Add Education</h2>
		</div>
	</div>
	<div class="row row2">
		<div  class="col-md-2"></div>
		<div class="col-md-8">
		<form action="<%= coursesCreate_path %>" method="post">
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
			<table class="table table-bordered">
				<tr>
					<th>Name:</th>
					<td><input class="input" type="text" maxlength="100" name="education[name]" value="<%= session[:name] %>"></td>
					<th>School:</th>
					<td><input class="input" type="text" maxlength="100" name="education[school]" value="<%= session[:school] %>"></td>
				</tr>
				<tr>
					<th>From:</th>
					<td><input class="input"  type="date" name="education[start]" value="<%= session[:start] %>" required></td>
					<th>To:</th>
					<td><input class="input"  type="date" name="education[end]" value="<%= session[:end] %>" required></td>
				</tr>
				<tr>
					<th>Status:</th>
					<td><input class="input" type="text" maxlength="100" name="education[status]"  value="<%= session[:status] %>"></td>
					<th>Category:</th>
					<td><input class="input" type="text" maxlength="100" name="education[category]"  value="<%= session[:category] %>"></td>
				</tr>
				<tr>
					<th>City:</th>
					<td><input class="input" type="text" maxlength="100" name="education[city]"  value="<%= session[:city] %>"></td>
					<th>Country:</th>
					<td><input class="input" type="text" maxlength="100" name="education[country]"  value="<%= session[:country] %>"></td>
				</tr>
				<tr>
					<th>Description:</th>
					<td>
						<textarea class="input" name="education[description]" id="" cols="30" rows="5"><%= session[:description] %></textarea>
					</td>
					<th>Website:</th>
					<td><input class="input" type="text" maxlength="100" name="education[website]"  value="<%= session[:website] %>"></td>
				</tr>
				<tr>
					<th>Logo:</th>
					<td><input class="input" type="text" maxlength="100" name="education[logo]"  value="<%= session[:logo] %>"></td>
					<td></td>
					<td></td>
					
				</tr>
				<tr>
					<td colspan="4"  align="center">
						<button type="submit" class="button">Add Education</button>
						<a href="<%= coursesCancel_path %>" ><button class="button" >Cancel</button></a>
					</td>
				</tr>

			</table>
		</form>
	</div>
	<div  class="col-md-2"></div>
	</div>
