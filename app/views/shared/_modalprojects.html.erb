
	<% @projects.each do |project| %>
	<div class="modal fade" id="projectModal<%= project.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title" id="myModalLabel"><%= project.name %> - Description</h4>
	      </div>
	      <div class="modal-body">
				<form action="">
					<div class="form-group">
						<label for="subject">Project: <%= project.name %></label>
					</div>

					<div class="form-group">
						<label for="message">Description:</label>
						<textarea disabled="disabled" maxlength="500" class="form-control" rows="3" name="message" id="message" cols="30" rows="10"><%= project.description %></textarea>
					</div>

					<div class="form-group text-right">
				
						<button type="button" class="btn enviar" data-dismiss="modal">Close</button>
					</div>
				</form>
	      </div>
	    </div>
	  </div>
	</div>
	<% end %>
